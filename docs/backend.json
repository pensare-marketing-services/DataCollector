{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user who has submitted data through the Collect app.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity, matches Firebase Auth UID."
        },
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "photoURL": {
          "type": "string",
          "description": "Base64 encoded data URL of the user's resized photo."
        },
        "phone": {
          "type": "string",
          "description": "User's phone number."
        },
        "age": {
          "type": "number",
          "description": "User's age."
        },
        "mandalam": {
          "type": "string",
          "description": "User's Mandalam."
        },
        "mekhala": {
          "type": "string",
          "description": "User's Mekhala."
        },
        "unit": {
          "type": "string",
          "description": "User's Unit."
        },
        "submissionDate": {
          "type": "string",
          "description": "Date and time when the user submitted the data.",
          "format": "date-time"
        },
        "acceptedDeclaration": {
          "type": "boolean",
          "description": "Indicates whether the user accepted the declaration."
        }
      },
      "required": [
        "id",
        "name",
        "phone",
        "age",
        "mandalam",
        "mekhala",
        "unit",
        "submissionDate",
        "acceptedDeclaration"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile data. The document ID is the user's unique authentication ID."
    }
  }
}
