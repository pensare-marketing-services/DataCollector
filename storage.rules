rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // The path here matches the path used in the client-side code to upload photos.
    match /user-photos/{userId}/profile.jpg {
      // Allow reads from anyone. This makes profile pictures public.
      allow read: if true;
      
      // Allow writes only if the user is authenticated and the userId in the path
      // matches their own UID. This prevents users from overwriting each other's photos.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    /*
    // Example of another rule for a different path
    match /documents/{documentId} {
      allow read, write: if request.auth != null;
    }
    */
  }
}
