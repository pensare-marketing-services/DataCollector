rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * =====================================================================
     *                          Documentation
     * =====================================================================
     *
     * @Core_Philosophy
     * This ruleset enforces a strict user-ownership model for writes, but
     * allows any authenticated user (including anonymous users for the admin
     * dashboard) to read the full list of user data.
     *
     * @Data_Structure
     * A top-level collection 'users' where each document ID is a user's
     * authentication UID.
     *
     * @Key_Security_Decisions
     * - User Data Isolation (for writes): Users can create, update, and
     *   delete only their own data document.
     * - Allowed Listing for Admins: Listing all documents in the 'users'
     *   collection is enabled for authenticated clients to power the admin
     *   dashboard.
     * - Denormalization for Authorization: The user's UID is stored as the
     *   document ID and in an 'id' field. Rules enforce this on creation
     *   and immutability on update.
     *
     */

    // =====================================================================
    //                        Helper Functions
    // =====================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function hasValidIdOnCreate(userId) {
      return request.resource.data.id == userId;
    }

    function hasImmutableId() {
      return request.resource.data.id == resource.data.id;
    }

    // =====================================================================
    //                           Collection Rules
    // =====================================================================

    /**
     * @description
     *   Rules for the main user data collection. A user can create,
     *   read, update, and delete ONLY their own document. Listing all
     *   users is allowed for any authenticated session to populate the
     *   admin dashboard.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isSignedIn(); // Allow authenticated users to list
      allow create: if isOwner(userId) && hasValidIdOnCreate(userId);
      allow update: if isExistingOwner(userId) && hasImmutableId();
      allow delete: if isExistingOwner(userId);
    }

  }
}
