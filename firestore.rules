rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * =====================================================================
     *                          Documentation
     * =====================================================================
     *
     * @Core_Philosophy
     * This ruleset enforces a strict user-ownership model. Each user can
     * create, read, update, and delete only their own data document.
     *
     * @Data_Structure
     * A top-level collection 'users' where each document ID is a user's
     * authentication UID.
     *
     * @Key_Security_Decisions
     * - User Data Isolation: Users are confined to their own document at
     *   `/users/{request.auth.uid}`.
     * - Disallowed Listing: Listing all documents in the 'users' collection
     *   is disabled for clients to protect user privacy.
     * - Denormalization for Authorization: The user's UID is stored as the
     *   document ID and in an 'id' field within the document. Rules
     *   enforce this 'id' is set correctly on creation and is immutable.
     *
     */

    // =====================================================================
    //                        Helper Functions
    // =====================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function hasValidIdOnCreate(userId) {
      return request.resource.data.id == userId;
    }

    function hasImmutableId() {
      return request.resource.data.id == resource.data.id;
    }

    // =====================================================================
    //                           Collection Rules
    // =====================================================================

    /**
     * @description
     *   Rules for the main user data collection. A user can create,
     *   read, update, and delete ONLY their own document. Listing all
     *   users is explicitly forbidden to protect user privacy.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Crucial privacy protection
      allow create: if isOwner(userId) && hasValidIdOnCreate(userId);
      allow update: if isExistingOwner(userId) && hasImmutableId();
      allow delete: if isExistingOwner(userId);
    }

  }
}
